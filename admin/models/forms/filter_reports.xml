<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_JBD_FILTER_SEARCH_LABEL"
                description="COM_JBD_FILTER_SEARCH_DESC"
                hint="JSEARCH_FILTER"
        />

        <input type="hidden" name="form_submited" value="1"/>
    </fields>

    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="COM_CONTENT_LIST_FULL_ORDERING"
                description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
                onchange="this.form.submit();"
                default="a.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="r.name ASC">JGLOBAL_TITLE_ASC</option>
            <option value="r.name DESC">JGLOBAL_TITLE_DESC</option>
            <option value="r.id ASC">JGRID_HEADING_ID_ASC</option>
            <option value="r.id DESC">JGRID_HEADING_ID_DESC</option>
        </field>

        <field
                name="limit"
                type="limitbox"
                label="COM_CONTENT_LIST_LIMIT"
                description="COM_CONTENT_LIST_LIMIT_DESC"
                class="input-mini"
                default="25"
                onchange="this.form.submit();"
        />
    </fields>
</form>
